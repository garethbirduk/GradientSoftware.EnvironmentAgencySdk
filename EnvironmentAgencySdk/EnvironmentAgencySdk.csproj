<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Authors>Gareth Bird</Authors>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyVersion>0.0.1</AssemblyVersion>
    <FileVersion>0.0.1</FileVersion>
    <Version>0.1.2</Version>
    <Nullable>disable</Nullable>
    <Copyright>Â© 2022 Gareth Bird</Copyright>
    <RunPostBuildEvent>OnOutputUpdated</RunPostBuildEvent>
    <SignAssembly>False</SignAssembly>
    <Company>Gradient Software</Company>
    <RepositoryUrl>https://github.com/garethbirduk/GradientSoftware.EnvironmentAgencySdk</RepositoryUrl>
    <PackageTags>observer; subject; history; typed observer</PackageTags>
    <Description>An SDK for interaction with the EnvironmentAgency API</Description>
    <Product>(AssemblyName)</Product>
    <PackageId>GradientSoftware.$(AssemblyName)</PackageId>
    <PackageIcon>icon.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

</Project>
